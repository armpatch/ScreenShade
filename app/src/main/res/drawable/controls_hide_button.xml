<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/black">
    <item
        android:width="50dp"
        android:height="50dp">
        <shape android:shape="oval">
            <solid android:color="@color/color_controls_hide_controls_button" />
        </shape>
    </item>

    <item
        android:width="30dp"
        android:height="5dp"
        android:top="22.5dp"
        android:left="10dp">

        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/black" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="30dp"
        android:height="5dp"
        android:top="22.5dp"
        android:left="10dp">

        <rotate
            android:fromDegrees="-45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/black" />
            </shape>
        </rotate>
    </item>

</ripple>
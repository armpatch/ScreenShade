<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/black">
    <item android:id="@+id/circle"
        android:width="50dp"
        android:height="50dp">
        <shape android:shape="oval">
            <solid android:color="@color/color_controls_enable_button" />
        </shape>
    </item>

    <item
        android:width="12dp"
        android:height="5dp"
        android:top="22.5dp"
        android:left="15dp">

        <rotate
            android:fromDegrees="-45"
            android:pivotX="0"
            android:pivotY="0">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/black" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="17dp"
        android:height="5dp"
        android:top="22.5dp"
        android:left="15dp">

        <rotate
            android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/black" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="22dp"
        android:height="5dp"
        android:top="23.5dp"
        android:left="15dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

</ripple>